# Search Autocomplete Service Configuration

# Server Configuration
PORT=8080
API_KEY=your-secret-api-key-here
ENABLE_CORS=true
LOG_LEVEL=info

# Server Timeouts
READ_TIMEOUT=10s
WRITE_TIMEOUT=10s
IDLE_TIMEOUT=60s

# Autocomplete Service Settings
MAX_SUGGESTIONS=10
ENABLE_FUZZY=true
FUZZY_THRESHOLD=2
PERSONALIZED_REC=false

# Caching Configuration
CACHE_ENABLED=true
CACHE_TTL=5m

# Redis Configuration (optional - uses in-memory cache if disabled)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Data Pipeline Configuration
PIPELINE_BATCH_SIZE=100
PIPELINE_FLUSH_INTERVAL=30s
PIPELINE_QUEUE_SIZE=10000

# Production overrides (uncomment for production use)
# LOG_LEVEL=warn
# CACHE_TTL=15m
# REDIS_ENABLED=true
# PERSONALIZED_REC=true
# PIPELINE_BATCH_SIZE=500
# PIPELINE_FLUSH_INTERVAL=60s 